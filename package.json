{
    "name": "vircadia-world",
    "private": false,
    "type": "module",
    "workspaces": [
        "src/*"
    ],
    "scripts": {
        "dev:server": "npm run dev --prefix src/server",
        "dev:client": "npm run dev --prefix src/client",
        "dev": "run-p dev:* --print-label",
        "lint": "eslint --cache --ext \".js,.ts,.tsx\" src",
        "format": "prettier --write 'src/**/*.{js,ts,tsx,json,css,md}'",
        "type-check": "tsc",
        "build:server": "npm run build --prefix src/server",
        "build:client": "npm run build --prefix src/client",
        "build": "run-s build:server build:client"
    },
    "dependencies": {
        "babylonjs": "^7.24.0",
        "zod": "^3.23.8"
    },
    "alias": {
        "scheduler/tracing": "../../node_modules/scheduler/tracing-profiling"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-promise": "^6.2.0",
        "globals": "^15.3.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.2.5",
        "tsx": "^4.0.0",
        "typescript": "^5.4.5",
        "vite": "^5.2.12",
        "babylonjs-gltf2interface": "^7.24.0"
    },
    "publishConfig": {
        "access": "restricted"
    }
}
