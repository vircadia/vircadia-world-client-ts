{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "types": ["semver"]
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --import-map=import_map.json dev.ts",
    "build": "deno bundle client.ts dist/bundle.js",
    "lint": "deno lint",
    "test:all": "deno test --allow-net client.ts",
    "test:watch": "deno test --allow-net --watch client.ts"
  },
  "lint": {
    "files": {
      "include": ["**/*.ts", "**/*.js", "**/*.tsx", "**/*.jsx"],
      "exclude": ["node_modules", "dist"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-namespace"]
    }
  },
  "imports": {
    "@supabase/supabase-js": "jsr:@supabase/supabase-js@^2.45.3"
  }
}
