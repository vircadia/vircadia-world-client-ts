{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "strict": true
  },
  "tasks": {
    "build": "deno bundle client.ts dist/bundle.js",
    "lint": "deno lint",
    "test:all": "deno test --allow-net --allow-read --allow-write --allow-env"
  },
  "lint": {
    "files": {
      "include": ["**/*.ts", "**/*.js", "**/*.tsx", "**/*.jsx"],
      "exclude": ["node_modules", "dist"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-namespace"]
    }
  },
  "imports": {
    "@supabase/supabase-js": "jsr:@supabase/supabase-js@^2.45.3"
  }
}
